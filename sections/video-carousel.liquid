<div class="video-carousel-section">
  <h2>{{ section.settings.heading }}</h2>
  
  <div class="video-carousel">
    {% for block in section.blocks %}
      <div class="video-slide">
        <video autoplay muted loop>
          <source src="{{ block.settings.video_url }}" type="video/mp4">
        </video>
      </div>
    {% endfor %}
  </div>
</div>

<style>
.video-carousel {
  display: flex;
  gap: 20px;
}
.video-slide video {
  width: 300px;
  height: 400px;
}
</style>

{% schema %}
{
  "name": "Video Carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL"
        }
      ]
    }
  ]
}
{% endschema %}